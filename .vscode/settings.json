{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.printWidth": 120,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [120],

  "files.exclude": {
    "**/__snapshots__/**": false,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/node_modules/**": true
  },

  "search.exclude": {
    "**/__snapshots__/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/node_modules/**": true
  },

  "files.watcherExclude": {
    "**/__snapshots__/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true
  }
}
